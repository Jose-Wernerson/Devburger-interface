{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80,
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noRedeclare": "off"
			},
			"a11y": {
				"noLabelWithoutControl": "off",
				"useValidAnchor": "off"
			},
			"style": {
				"useSelfClosingElements": "off"
			},
			"recommended": true,
			"complexity": {
				"noThisInStatic": "off",
				"useOptionalChain": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"bracketSpacing": true,
			"semicolons": "always",
			"arrowParentheses": "always",
			"trailingCommas": "all"
		}
	}
}
